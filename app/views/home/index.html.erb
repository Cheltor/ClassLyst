<% if user_signed_in? %>
<% @title= current_user.email %>
<%= render "layouts/dashboard/userdash" %>
<%= render "layouts/footer/footer" %>
<% elsif business_signed_in? %>
<% @title= current_business.name %>
<%= render "layouts/dashboard/bizdash" %>
<%= render "layouts/footer/footer" %>
<% else %>


<div class="header-2 desktop-only" style="padding-top: 60px">
    <div class="page-header header-filter page-header-small">
      <div class="page-header-image" style="background-image: url('images/business-team-meeting-boardroom_925x.jpg');"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto text-center">
            <h1>Find resources for your classes below.</h1>
          </div>
          <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-raised card-form-horizontal card-plain" data-background-color="">
              <div class="card-body">
            <%= search_form_for @search, url: posts_path, defaults: {wrapper: :inline_field4} do |f| %>
                  <div class="row">
                    <div class="col-md-9">
                      <div class="form-group">
                   <%= f.text_field :title_or_content_or_comments_body_cont, placeholder: 'Keywords', class:"form-control" %>
                      </div>
                    </div>
                    <div class="col-md-3">
              <%= f.submit "Search", class:"btn btn-primary btn-round btn-block" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


<div class="header-2 mobile-only">
    <div class="page-header header-filter page-header">
      <div class="page-header-image" style="background-image: url('images/business-team-meeting-boardroom_925x.jpg');"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto text-center">
            <h1>Find resources for your college classes by using the search bar down below.</h1>
          </div>
          <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-raised card-form-horizontal card-plain" data-background-color="">
              <div class="card-body">
            <%= search_form_for @search, url: posts_path, defaults: {wrapper: :inline_field4} do |f| %>
                  <div class="row">
                    <div class="col-md-9">
                      <div class="form-group">
                   <%= f.text_field :title_or_content_or_comments_body_cont, placeholder: 'Keywords', class:"form-control" %>
                      </div>
                    </div>
                    <div class="col-md-3">
              <%= f.submit "Search", class:"btn btn-primary btn-round btn-block" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag(:div, msg, class: "alert alert-info", style: "text-align:center") %>
<% end %>

<div class="features-5">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h2 class="title" style="text-align:center">On the shoulders of giants.</h2>
        <h4 class="description" style="text-align:center">You don't need to spend time searching for resources that your classmates have already found. You're not the first person to get confused on that question. Join the community and spend less time studying. Helpful posts and comments earn points and discounts at local businesses. </h4>
        <div class="info info-horizontal">
            <%= link_to posts_path do %>
            <div class="icon icon-success icon-circle">
              <i class="material-icons">
                question_answer
              </i>
            </div><% end %>
          <div class="description">
            <%= link_to posts_path do %>
            <h4 class="info-title">Search Posts</h4>
            <% end %>
            <p>Find answers to questions already asked, informaiton found, and more.</p>
          </div>
        </div>
        <div class="info info-horizontal">
            <%= link_to courses_path do %>
            <div class="icon icon-info icon-circle">
                <i class="material-icons">
                account_balance
                </i>
            </div><% end %>
          <div class="description">
            <%= link_to courses_path do %>
            <h4 class="info-title">Search by class</h4>
            <% end %>
            <p>Find information associated with each of your classes.</p>
          </div>
        </div>
        <div class="info info-horizontal">
            <%= link_to rewards_path do %>
            <div class="icon icon-warning icon-circle">
                <i class="material-icons">
                redeem
                </i>
            </div><% end %>
          <div class="description">
            <%= link_to rewards_path do %>
            <h4 class="info-title">Earn rewards</h4>
            <% end %>
            <p>Earn points for submitting helpful posts or answering questions. Points are trading in for rewards at local businesses.</p>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="tablet-container">
          <div class="container-fluid">
            <h3 style="text-align:center">Recent Posts</h3>
            <div class="card">
              <div class="card-content" style="text-align:center">
                  <div class="table-responsive">
                      <table class="table">
                          <thead class="text-primary">
                              <tr>
                                <th>Title</th>
                                <th>Course</th>
                                <th>Time created</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @posts.first(5).each do |post| %>
                              <tr>
                                <td><strong><%= link_to post.title, post %></strong></td>
                                <td><%= link_to post.course.name, post.course %></td>
                                <td><%= time_ago_in_words(post.created_at) + " ago" %></td>
                              </tr>
                            <% end %>
                          </tbody>
                      </table>
                  </div>
                  <div class="row">
                    <div class="col mr-auto ml-auto">
                      <div style="background:#f1f1f1; text-align:center; padding: 1em">
                        <%= link_to 'More Posts', posts_path, class:"btn btn-primary" %>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tablet-container">
          <div class="container-fluid">
            <h3 style="text-align:center">Recent Rewards</h3>
            <div class="card">
              <div class="card-content" style="text-align:center">
                  <div class="table-responsive">
                      <table class="table">
                          <thead class="text-primary">
                              <tr>
                                <th>Reward</th>
                                <th>Cost</th>
                                <th>Expires</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @rewards.first(5).each do |reward| %>
                              <tr>
                                <td><strong><%= link_to reward.name, reward %></strong></td>
                                <td><%= pluralize(reward.try(:cost), 'Point') %></td>
                                <td><%= reward.expdate.strftime("%m/%d/%Y") %></td>
                              </tr>
                            <% end %>
                          </tbody>
                      </table>
                  </div>
                  <div class="row">
                    <div class="col mr-auto ml-auto">
                      <div style="background:#f1f1f1; text-align:center; padding: 1em">
                        <%= link_to 'More Rewards', rewards_path, class:"btn btn-primary" %>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %> 