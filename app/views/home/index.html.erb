            <%= link_to posts_path do %>
            <div class="icon icon-success icon-circle">
                <i class="material-icons">
                question_answer
                </i>
            </div><% end %>

              <div class="description">
                <%= link_to posts_path do %>
                <h4 class="info-title" style="font-weight: bold">All Posts</h4>
                <% end %>
                <p style="font-weight: 900; color: white">Find answers to questions already asked, informaiton found, and more.</p>
              </div>

