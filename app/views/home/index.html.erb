<% if user_signed_in? %>
<% @title= current_user.email %>
<%= render "layouts/dashboard/userdash" %>
<%= render "layouts/footer/footer" %>
<% elsif business_signed_in? %>
<% @title= current_business.name %>
<%= render "layouts/dashboard/bizdash" %>
<%= render "layouts/footer/footer" %>
<% else %>


<div class="header-2 desktop-only" style="padding-top: 55px">
    <div class="page-header header-filter page-header">
      <div class="page-header-image" style="background-image: url('images/business-team-meeting-boardroom_925x.jpg');"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto text-center" style="padding-top: 60px">
              <% flash.each do |name, msg| %>
                  <br>
              <%= content_tag(:div, msg, class: "alert alert-info", style: "color: #fff; text-align:center") %>
              <% end %>
            <h2>Find resources for your classes here!</h2>
          </div>
          <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-raised card-form-horizontal card-plain" data-background-color="">
              <div class="card-body">
            <%= search_form_for @search, url: posts_path, defaults: {wrapper: :inline_field4} do |f| %>
                  <div class="row">
                    <div class="col-md-9">
                      <div class="form-group">
                   <%= f.text_field :title_or_content_or_course_name_or_comments_body_cont, placeholder: 'Search by subject, topic or class', class:"form-control form-control-lg", style:"border-width: 2px;" %>
                      </div>
                    </div>
                    <div class="col-md-3">
              <%= f.submit "Search", class:"btn btn-primary btn-round btn-block" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="info">
                          <%= link_to posts_path do %>
            <div class="icon icon-success icon-circle">
                <i class="material-icons">
                question_answer
                </i>
            </div><% end %>

              <div class="description">
                <%= link_to posts_path do %>
                <h4 class="info-title" style="font-weight: bold">Save Time</h4>
                <% end %>
                <p style="font-weight: 900; color: white">Find answers to questions already asked, informaiton found, and more.</p>
              </div>

            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
                          <%= link_to courses_path do %>
            <div class="icon icon-info icon-circle">
                <i class="material-icons">
                account_balance
                </i>
            </div><% end %>
              <div class="description">
                <%= link_to courses_path do %>
                <h4 class="info-title" style="font-weight: bold">Collaborate</h4>
                <% end %>
                <p style="font-weight: 900; color: white">Work with other students both past and present who have taken your courses.</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
                          <%= link_to rewards_path do %>
            <div class="icon icon-warning icon-circle">
                <i class="material-icons">
                redeem
                </i>
            </div><% end %>
              <div class="description">
                <%= link_to rewards_path do %>
                <h4 class="info-title" style="font-weight: bold">Earn Rewards</h4>
                <% end %>
                <p style="font-weight: 900; color: white">Earn points for helpful posts/comments and redeem for discounts at local businesses.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


