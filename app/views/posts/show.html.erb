<p id="notice"><%= notice %></p>

<% if @post.flagged == true %>
<h1>This post has been flagged.</h1>
<% else %>
<p>
  <strong>Course:</strong>
  <%= @post.course %>
</p>

<p>
  <strong>Ptype:</strong>
  <%= @post.ptype %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>


  <div class="social-buttons">
    <p style="text-align: center">Points: <%= @post.get_upvotes.size %> - <%= @post.get_downvotes.size %> = <%= @post.weighted_score %></p>
  </div>

 <%= link_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-chevron-up"></span>
<% end %>
<%= link_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-chevron-down"></span>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Flag', flag_post_path(@post), method: :patch, data: {confirm: "Are you sure?"} %>

<h3>Comments</h3>
<%= render partial: "comments/form", locals: { commentable: @post } %>

 <%= render @comments, max_nesting: 2 %>


<br />
<%= paginate @comments %>
<% end %>